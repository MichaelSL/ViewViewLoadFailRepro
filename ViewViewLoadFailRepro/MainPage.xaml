<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ViewViewLoadFailRepro.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <WebView
                x:Name="WebView"
                Source="{Binding GpxStudioUrl}"
                HeightRequest="300"
                WidthRequest="300"
                HorizontalOptions="Center" />

            <Button
                Text="Open In System Browser"
                Command="{Binding OpenExternalCommand}" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
